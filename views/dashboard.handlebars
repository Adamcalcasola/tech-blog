{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/update/{{post.id}}" class="edit-link">Update post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<button type="submit" class="btn">+New Post</button>

<script src="/javascript/add-post.js"></script>