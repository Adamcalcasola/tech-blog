<a href="/post/{{id}}">
<article class="post">
    <div class="title">
        {{title}}
        <div class="meta">
            Posted by {{user.username}} on {{format_date created_at}}
        </div>
    </div>
    <div class="content">
        {{content}}
    </div>

    {{#each comments}}
        {{> comments comment}}
    {{/each}}

</article>
</a>