<article>
  <form class="update-post-form">
    <div>
      <div class="title">Edit Post</div>
      <label for="post-title">Title</label>
      <input name="post-title" type="text" value="{{post.title}}" />
      <label for="post-content">Content</label>
      <input name="post-content" type="text" value="{{post.content}}" />
    </div>
    <button type="submit">Update post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

{{#if loggedIn}}
<script src="/javascript/update-post.js"></script>
<script src="/javascript/delete-post.js"></script>
{{/if}}